def gv

pipeline {
  agent any

  environment {
    NEW_VERSION=1.2
  }

  stages {
    stage("init"){
      steps {
        gv = load("script.groovy")
      }
    }
    stage("build"){
      steps {
        script {
          gv.buildApp()
        }
      }
    }
  stage("test"){
      steps {
        script {
          gv.testApp()
        }
      }
    }
  stage("deploy"){
      steps {
        script {
          gv.deployApp()
        }
      }
    }
  }
}

pipeline {
  agent any

  environment {
    NEW_VERSION=1.2
  }

  stages {
    stage("build"){
      steps {
        echo "building the application"
      }
    }
  stage("test"){
      steps {
        echo "testing the application"
      }
    }
  stage("deploy"){
      steps {
        echo "deploying the application in version ${NEW_VERSION}"
      }
    }
  }
}
